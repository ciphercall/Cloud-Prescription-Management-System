                    $(document).ready(function () {

                        $('#txt_PATIENTIDM').autocomplete({

                            source: '@Url.Action("TagSearch", "Patient")',
                            change: $('#txt_PATIENTIDM').keyup(_.debounce(txtOneChanged, 500)),
                            select: function (event, ui) {
                                $("#txt_PATIENTIDM").val(ui.item.label);
                                txtOneChanged();
                            },                           
